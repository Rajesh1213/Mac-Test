<ul id="flits_list">
  <% @friends.each do |friend| %>

    <li <% if @friends.first ==friend %>class="first"<%end%> >
      <%= image_tag friend.gravatar_url %>
      <div class="flit_message_container" style="width:335px;">
        <%= link_to friend.username, user_flits_path(friend.username) %>
        <% if friend.flits.length > 0 %>
          <%=h friend.flits.last.message %>
          <div class="time_ago">
            <%= distance_of_time_in_words_to_now(friend.flits.last.created_at) %> ago
          </div>
        <%end%>
      </div>
      <div class="button_container">
        <input type="button" name="<%= friend.id %>" class="button ajax_button" value="Stop Following"/>
      </div>
      <div class="clear"></div>
    </li>
  <%end%>
</ul>

<script type="text/javascript">
  $(function(){
    $('.ajax_button').click(function(){
      alert('hi')
    })
  }

  </script>